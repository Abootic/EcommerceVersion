@model DetailsDataDto
<div class="content-body">
    <!-- login page start -->
    @if (TempData["err"] != null)
    {
        <span class="alert alert-danger">@TempData["err"]</span>
    }
    @if (TempData["suc"] != null)
    {
        <span class="alert alert-success">@TempData["suc"]</span>
    }
    <section id="auth-login" class="row flexbox-container">
        <div class="col-xl-8 col-11">
            <div class="card bg-authentication mb-0">
                <div class="row m-0">
                    <!-- left section-login -->
                    <div class="col-md-6 col-12 px-0">
                        <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                            <div class="card-header pb-1">
                                <div class="card-title">
                                    <h4 class="text-center mb-2">يا مرحبا</h4>
                                </div>
                            </div>
                            <div class="card-body">

                                <form asp-controller="DetailsData" asp-action="Edit" method="post">
                                    <input type="hidden" asp-for="MasterDataId">
                                    <input type="hidden" asp-for="Id">
                                    <div class="form-group mb-50">

                                        <label class="text-bold-600" asp-for="ArValue"> </label>
                                        <input type="text" class="form-control" asp-for="ArValue" placeholder="اسم ">
                                    </div>
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="EnValue"> </label>
                                        <input type="text" class="form-control" asp-for="EnValue" placeholder="القسيمة ">
                                    </div>

                                    <div class="form-group">

                                        <label class="form-label"> الوصف</label>

                                        <textarea type="text" class="form-control" rows="4" asp-for="Description"></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-primary glow w-100 position-relative">تعديل<i id="icon-arrow" class="bx bx-right-arrow-alt"></i></button>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                    <!-- right section image -->
                    <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                        <img class="img-fluid" src="~/app-assets/images/pages/login.png" alt="branding logo">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- login page ends -->

</div>
