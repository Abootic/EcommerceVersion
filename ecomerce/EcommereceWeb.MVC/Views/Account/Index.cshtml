@model UserAndRoleVm
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- users list start -->
            <section class="users-list-wrapper">
                <div class="users-list-filter px-1">
                    <form>
                        <div class="row border rounded py-2 mb-2">
                          
                          
                            <div class="col-12 col-sm-6 col-lg-3 d-flex align-items-center">
                                <button type="reset" class="btn btn-primary btn-block glow users-list-clear mb-0"><a asp-controller="Account" asp-action="Create"  style="color:#fff"> add</a></button>
                            </div>
                        </div>
                    </form>
                </div>
                @if(Model!=null){
                @if (Model.data.Any()){
<div class="users-list-table">
                            <div class="card">
                                <div class="card-body">
                                    <!-- datatable start -->
                                    <div class="table-responsive">
                                        <table id="users-list-datatable" class="table">
                                            <thead>
                                                <tr>
                                                    
                                                <th>FullName</th>
                                                    <th>username</th>
                                                <th>Email</th>
                                                <th>PhoneNamber</th>
                                                   
                                                    <th>role</th>
                                                    <th>status</th>
                                                    <th>edit</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach(var item in Model.data){
                                                <tr>
                                                    <td>@item.FullName</td>
                                                 @*   <td>
                                                        <a href="../../../html/ltr/vertical-menu-template/app-users-view.html">erasmus2110</a>
                                                    </td>*@
                                                    <td>@item.UserName</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.PhoneNamber</td>
                                                    <td>@item.UserType</td>
                                                        @if (item.State == 1)
                                                        {
                                                           <td><span class="badge badge-light-success">نشط</span></td>
                                                        }
                                                        else
                                                        {
                                                           <td><span class="badge badge-light-danger">موقف</span></td>

                                                        }
                                                        <td>
                                                        <div class="btn-group dropend">
                                                            <span class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">  <i class="ai-dots-vertical"></i></span>
                                                            <div class="dropdown-menu mx-1">
                                                                    <a class="dropdown-item" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddRole">اضافة صلاحيى  </a>
                                                            </div>
                                                            </div>
                                                            </td>
0                                                  
                                                   
                                                </tr>}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- datatable ends -->
                                </div>
                            </div>
                        </div>
                    }else
                    {
                        <div class="alert alert-danger"> null</div>
                    }}

                    else
                    {
                        <div class="alert alert-danger"> null</div>
                    }
                    </section>
          
            <!-- users list ends -->

        </div>
    </div>
</div>
<partial name="_AddUserToRole" />
<!-- END: Content-->