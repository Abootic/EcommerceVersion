                                      <label class="text-bold-600" asp-for="ProductId"> </label>

                                     <input type="text" class="form-control" style="color:#aa74fb" asp-for="ProductId" readOnly >

                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="ArTitle"> </label>
                                        <input type="text" class="form-control" asp-for="ArTitle" placeholder="ادخل الاسم العربي">
                                        <span asp-validation-for="ArTitle"></span>

                                    </div> 
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="EnTitle"> </label>
                                        <input type="text" class="form-control" asp-for="EnTitle" placeholder="ادخل الاسم بالانجليزي ">
                                    </div>  <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="ArValue"> </label>
                                        <input type="text" class="form-control" asp-for="ArValue" placeholder="ادخل القيمة العربي">
                                             <span asp-validation-for="ArValue"></span>

                                    </div> 
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="EnValue"> </label>
                                        <input type="text" class="form-control" asp-for="EnValue" placeholder="ادخل القيمة بالانجليزي ">
                                    </div>
                                   <br />
                                    <div class="row">
                                       <div class="col-4 ">    
                                               <div class="demo-inline-spacing">
@{
                               @if (TempData.GetTemp<int>("ProductId") != 0)
                                 {
                                  int mainId = TempData.GetTemp<int>("ProductId");
                                        <a class="btn btn-secondary" asp-action="Index" asp-route-id="@mainId">الغاء</a>
                                  }
                              }                                            </div>
                                            </div>
                                        <div class="col-8 text-end">
                                            <input type="submit" class="btn alert-info m-1  mb-3" value="تعديل ">
                                            </div>
                                    </div>

                                
                                                </div>


                                       
                                               
                                          <br />
                                   
                                        
                                            
                                           </div>






                                            </div>
                                        </div>
                                        </div>

                                      


                                    </form>
                               
                        </div>
                    </div>
                </div>
            </section>
            <!-- Form wizard with step validation section end -->
        </div>
    </div>
    <!-- / Content -->
   

    <div class="content-backdrop fade"></div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}