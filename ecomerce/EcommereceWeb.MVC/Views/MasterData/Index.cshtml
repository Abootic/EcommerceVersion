@model IEnumerable<MasterDataDto>
<!-- BEGIN: Content-->
@if (TempData["err"] != null)
{
    <span class="alert alert-danger">@TempData["err"]</span>
}
@if (TempData["suc"] != null)
{
    <span class="alert alert-success">@TempData["suc"]</span>
}

<div class="content-body">

    <div class="users-list-filter px-1">
        <form>
            <div class="row border rounded py-2 mb-2">


                <div class="col-12 col-sm-6 col-lg-3 d-flex align-items-center">
                    <button type="reset" class="btn btn-primary btn-block glow users-list-clear mb-0">   <a asp-controller="MasterData" asp-action="Create" style="color:#fff">     add </a></button>
                </div>
            </div>
        </form>
    </div>
    @if (Model != null)
    {
        @if (Model.Any())
        {
            <div class="users-list-table">
                <div class="card">
                    <div class="card-body">
                        <!-- datatable start -->
                        <div class="table-responsive">
                            <table id="users-list-datatable" class="table">
                                <thead>
                                    <tr>

                                        <th>الاسم</th>
                                        <th>القيمة</th>
                                        <th> الوصف</th>
                                       

                                        <th>الوصف</th>
                                        <th>الحالة</th>
                                        <th>الاجرءات</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            @*   <td>
                                <a href="../../../html/ltr/vertical-menu-template/app-users-view.html">erasmus2110</a>
                                </td>*@
                                            <td>@item.Name</td>
                                            <td>@item.CodeValue</td>
                                        
                                            <td>@item.Description</td>
                                            <td>1</td>
                                            @* @if (item.State == 1)
                                {
                                <td><span class="badge badge-light-success">نشط</span></td>
                                }
                                else
                                {
                                <td><span class="badge badge-light-danger">موقف</span></td>

                                }*@
                                            <td>
                                                <div class="btn-group dropend">
                                                    <span class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">  <i class="ai-dots-vertical"></i></span>
                                                    <div class="dropdown-menu mx-1">
                                                        <a class="dropdown-item" asp-controller="MasterData" asp-action="Edit" asp-route-Id="@item.Id"> تعديل  </a>
                                                        <a class="dropdown-item" asp-controller="MasterData" asp-action="Delete" asp-route-Id="@item.Id"> حذف  </a>
                                                        <a class="dropdown-item" asp-controller="DetailsData" asp-action="Index" asp-route-masterId="@item.Id"> تفاصيل البيانات  </a>
                                                    </div>


                                                </div>
                                            </td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- datatable ends -->
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger"> null</div>
        }       }

    else
    {
        <div class="alert alert-danger"> null</div>
    }


</div>
