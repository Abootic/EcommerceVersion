@model AttributeDto
<div class="content-body">
    <!-- login page start -->
   @*  @if (TempData["err"] != null)
    {
        <span class="alert alert-danger">@TempData["err"]</span>
    }
    @if (TempData["suc"] != null)
    {
        <span class="alert alert-success">@TempData["suc"]</span>
    } *@
    <section id="auth-login" class="row flexbox-container">
        <div class="col-xl-10 col-11">
            <div class="card bg-authentication mb-0">
                <div class="row m-0">
                    <!-- left section-login -->
                    <div class="col-md-8 col-12 px-0">
                        <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                            <div class="card-header pb-1">
                                <div class="card-title">
                                    <h4 class="text-center mb-2">يا مرحبا في صفات المتغيرة</h4>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (TempData.ContainsKey("msg"))
                                {
                                    <div class="alert alert-warning">@TempData["msg"]</div>
                                }
                                <form asp-controller="Attribute" asp-action="Create" method="post">
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="ArName" for="exampleInputEmail1"> </label>
                                        <input type="text" class="form-control" asp-for="ArName" placeholder="ادخل الاسم العربي">
                                        <span asp-validation-for="ArName"></span>
                                    </div>
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="EnName" for="exampleInputEmail1"></label>
                                        <input type="text" class="form-control" asp-for="EnName" placeholder="ادخل الاسم بالانجليزي ">
                                    </div>
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" asp-for="Code" for="exampleInputEmail1"> الرمز</label>
                                        <input type="text" class="form-control" asp-for="Code" placeholder=" ادخل الرمز الدال على الصفة">
                                    </div>
                                    <div class="form-group mb-50">
                                        <label class="text-bold-600" for="exampleInputEmail1">النوع </label>
                                        <select class="form-select" asp-for="Type">
                                            <option value=""> اختار النوع</option>
                                            <option value="1"> Select</option>
                                            <option value="2"> Button</option>
                                            <option value="3">Color</option>

                                        </select>
                                    </div>



                                    <div class="modal-footer d-inline-flex">
                                        <a class="btn btn-secondary" asp-action="Index">الغاء</a>
                                        <input type="submit" class="btn alert-info" value="اضافة صفة متغيرة ">
                                    </div>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                    <!-- right section image -->
                    <div class="col-md-4 d-md-block d-none text-center align-self-center p-3">
                        <img class="img-fluid" src="~/app-assets/images/pages/login.png" alt="branding logo">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- login page ends -->

</div>
